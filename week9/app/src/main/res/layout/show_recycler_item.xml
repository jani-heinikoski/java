<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/colorPrimary"
    android:elevation="4dp"
    android:translationZ="4dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/show_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextPrimary"
            android:textSize="28sp"
            android:text="@string/show_item_title_text"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="4dp">
        </TextView>

        <TextView
            android:id="@+id/show_item_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextSecondary"
            android:textSize="18sp"
            android:text="@string/show_item_time_text"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/show_item_title"
            android:layout_marginTop="14dp"
            android:paddingHorizontal="4dp">
        </TextView>


        <TextView
            android:id="@+id/show_item_theatres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextSecondary"
            android:textSize="18sp"
            android:text="@string/show_item_theatres_text"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/show_item_start_time"
            android:paddingHorizontal="4dp"
            android:layout_marginTop="4dp">
        </TextView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>